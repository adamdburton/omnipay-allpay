{
  "name": "mobiusmediauk/omnipay-allpay",
  "description": "AllPay (allpayx.com) driver for Omnipay.",
  "keywords": [
    "omnipay",
    "allpay"
  ],
  "homepage": "https://github.com/mobiusmediauk/omnipay-allpay",
  "license": "MIT",
  "authors": [
    {
      "name": "Mobius Media",
      "email": "dev@mobiusmedia.co.uk",
      "homepage": "https://mobiusmedia.co.uk"
    }
  ],
  "require": {
    "omnipay/common": "~3.0",
    "ext-json": "*"
  },
  "require-dev": {
    "omnipay/tests": "~3.0",
    "squizlabs/php_codesniffer": "^3",
    "phpro/grumphp": "^0.14"
  },
  "autoload": {
    "psr-4": {
      "Omnipay\\AllPay\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Omnipay\\AllPay\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 src/",
    "fix-style": "phpcbf -p --standard=PSR2 src/"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
